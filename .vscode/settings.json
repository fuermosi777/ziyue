// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/build/": true,
    "**/__snapshots__/": true,
    "default.realm.management/": true,
    "realm-object-server/": true,
    "*.realm.*": true,
    "*.realm": true
  },
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "javascript.validate.enable": false,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "ios/": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "ios/": true
  },
  // Set the default
  "editor.formatOnSave": true
}
